page {
    background-color: #f5f5f5;
}

page .pin {
    width: 750rpx;
    background: #fff;
    margin-top: 30rpx;
}

page .pin .All {
    margin: 0 30rpx;
}

page .pin .All .bar {
    width: 690rpx;
    height: 68rpx;
    font-size: 36rpx;
    font-family: PingFang SC;
    font-weight: 700;
    color: #333;
    line-height: 108rpx;
    box-shadow: 0 1px 0 0 #eee;
    margin-bottom: 45rpx;
    padding-bottom: 36rpx;
}

page .pin .All .All-item {
    height: 540rpx;
    margin-bottom: 47rpx;
    box-shadow: 0 1px 0 0 #eee;
}

page .pin .All .All-item .userInfo {
    height: 100rpx;
    width: 690rpx;
    position: relative;
}

page .pin .All .All-item .userInfo .userInfo-tou {
    width: 88rpx;
    height: 88rpx;
    border-radius: 50%;
}

page .pin .All .All-item .userInfo .userInfo-all {
    width: 228px;
    position: absolute;
    height: 80rpx;
    top: -7rpx;
    left: 121rpx;
}

page .pin .All .All-item .userInfo .userInfo-all .userInfo-name {
    width: 160rpx;
    height: 46rpx;
    font-size: 30rpx;
    font-family: PingFang SC;
    font-weight: 700;
    color: #333;
    line-height: 26px;
}

page .pin .All .All-item .userInfo .userInfo-all .userInfo-pinx {
    position: absolute;
    left: 0;
    top: 49rpx;
    height: 46rpx;
}

page .pin .All .All-item .userInfo .userInfo-all .userInfo-pinx .userInfo-pin {
    width: 20rpx;
    height: 20rpx;
    margin-right: 12rpx;
    padding: 5rpx 0;
}

page .pin .All .All-item .userInfo-pinx .van-icon {
    color: #c17372;
    font-size: 25rpx;
}

page .pin .All .All-item .userInfo .tui {
    width: 710rpx;
    font-size: 30rpx;
    font-family: PingFang SC;
    font-weight: 400;
    color: #777;
    line-height: 45rpx;
    margin-top: -33rpx;
    margin-bottom: 33rpx;
}

page .pin .All .All-item .userInfo .up {
    width: 690rpx;
    box-sizing: border-box;
    float: left;
}

page .pin .All .All-item .userInfo .up view {
    height: 120rpx;
    width: 160rpx;
    margin: 20rpx;
    width: 27%;
    float: left;
}

page .pin .All .All-item .userInfo .up image {
    width: 100%;
    height: 100%;
    border-radius: 10rpx;
}