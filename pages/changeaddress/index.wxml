<view>
    <view class="forms">
        <van-field border readonly bindtap="selectdz" label="所在地区" placeholder="收货地址" value="{{value1}}"></van-field>
        <van-field border bind:blur="onChange1" label="详细地址" placeholder="如街道门牌、房屋信息等" value="{{value}}"></van-field>
        <van-field border bind:blur="onChange2" label="联系人" placeholder="您的姓名" value="{{value}}"></van-field>
        <van-field border bind:blur="onChange3" label="手机号" placeholder="配送时联系您的手机号" value="{{value}}"></van-field>
        <view style="margin-top:30rpx">
            <van-checkbox-group bind:change="onChange" value="{{result}}">
                <van-cell-group>
                    <van-cell clickable title="设为默认地址" valueClass="value-class">
                        <van-checkbox bindtap="toogle" checkedColor="#C28E90" data-index="{{index}}"></van-checkbox>
                    </van-cell>
                </van-cell-group>
            </van-checkbox-group>
        </view>
    </view>
    <view class="btns">
        <view bindtap="Submit" hoverClass="bg">保存收货信息</view>
        <view bindtap="WeChatAvatar">
            <view hoverClass="bg">
                <image src="/images/user/wx.png"></image>
            </view>
			使用微信收货地址
		</view>
    </view>
    <van-popup bind:close="onClose" position="bottom" show="{{show}}">
        <van-area areaList="{{areaList}}" bind:cancel="onClose" bind:confirm="confirm"></van-area>
    </van-popup>
</view>
